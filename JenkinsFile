pipeline { 
  agent any

  environment {
    GOOGLE_APPLICATION_CREDENTIALS = credentials('FIREBASE_SERVICE_ACCOUNT_JSON')
  }

  stages {
    stage('Checkout') {
      steps {
        git branch: 'main', url: 'https://github.com/GitHope123/edu-connect-back-react'
      }
    }

    stage('Install dependencies') {
      steps {
        bat 'npm install'  // Ejecuta instalación de paquetes en Windows
      }
    }

    stage('Build') {
      steps {
        bat 'npm run build'  // Construye la aplicación
      }
    }

    stage('Test') {
      steps {
        bat 'npm test'  // Ejecuta pruebas unitarias
      }
    }

    stage('Setup Firebase') {
      steps {
        bat 'npm install -g firebase-tools'  // Instala CLI de Firebase globalmente
      }
    }

    stage('Deploy to Firebase Hosting') {
      steps {
        bat 'firebase deploy --only hosting'  // Despliega solo hosting a Firebase
      }
    }
  }
}
